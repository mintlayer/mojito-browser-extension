{
  "name": "browser-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^13.5.0",
    "d3": "^7.4.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "INLINE_RUNTIME_CHUNK=false react-scripts build && rm -f package.zip && (cd build && zip -r ../ext.zip ./*)",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-const-assign": "error",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-new-object": "error",
      "quote-props": [
        "error",
        "as-needed"
      ],
      "no-array-constructor": "error",
      "no-eval": "error",
      "no-trailing-spaces": "error",
      "max-params": [
        "error",
        3
      ],
      "max-depth": [
        "error",
        3
      ],
      "indent": [
        "error",
        2
      ],
      "eol-last": [
        "error",
        "always"
      ]
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!d3|d3-array|internmap|delaunator|robust-predicates)"
    ],
    "coveragePathIgnorePatterns": [
      "./src/index.js",
      "./src/commons/utils/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "react-scripts": "5.0.1"
  }
}

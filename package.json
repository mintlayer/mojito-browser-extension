{
  "name": "browser-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^13.5.0",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^6.0.1",
    "buffer": "^6.0.3",
    "d3": "^7.4.4",
    "node-forge": "^1.3.1",
    "pbkdf2": "^3.1.2",
    "date-fns": "^2.28.0",
    "process": "^0.11.10",
    "react": "^18.1.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "stream-browserify": "^3.0.0",
    "tiny-secp256k1": "^1.1.6",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-app-rewired start --env production",
    "build": "INLINE_RUNTIME_CHUNK=false react-app-rewired build && rm -f package.zip && (cd build && zip -r ../ext.zip ./*)",
    "test": "NODE_ENV=test react-scripts --openssl-legacy-provider test a --testPathIgnorePatterns='src/pages src/App.*.js'",
    "coverage": "NODE_ENV=test react-scripts --openssl-legacy-provider test a --testPathIgnorePatterns='src/pages src/App.*.js' --coverage ",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js",
    "prettier": "pretty-quick --staged",
    "pretty-quick": "pretty-quick",
    "pretty-quick-check": "pretty-quick --check",
    "pretty-quick-check-branch": "pretty-quick --check --branch main",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "src/commons/utils/main.js"
    ],
    "extends": [
      "eslint:recommended",
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "react/jsx-no-target-blank": "off",
      "quotes": [
        "error",
        "single"
      ],
      "no-const-assign": "error",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-new-object": "error",
      "quote-props": [
        "error",
        "as-needed"
      ],
      "no-array-constructor": "error",
      "no-eval": "error",
      "no-trailing-spaces": "error",
      "max-params": [
        "error",
        3
      ],
      "max-depth": [
        "error",
        3
      ],
      "eol-last": [
        "error",
        "always"
      ]
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!d3|d3-array|internmap|delaunator|robust-predicates)"
    ],
    "watchPathIgnorePatterns": [
      "src/App.*.js"
    ],
    "collectCoverageFrom": [
      "!src/pages",
      "!src/App.*.js"
    ],
    "coveragePathIgnorePatterns": [
      "./src/index.js",
      "./src/App.*.js",
      "./src/pages",
      "./src/ContextProvider.js",
      "./src/environmentVars.js",
      "./src/commons/utils/reportWebVitals.js",
      "./src/commons/workers/*",
      "./src/commons/entity/account.worker.js",
      "./src/commons/assets/img/*",
      "./src/commons/crypto/testTransactions.json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "dotenv-webpack": "^7.1.0",
    "ecpair": "^2.0.1",
    "fake-indexeddb": "^3.1.8",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react-scripts": "5.0.1",
    "wallet-address-validator": "^0.2.4"
  }
}

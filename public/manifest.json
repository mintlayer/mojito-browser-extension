{
  "manifest_version": 2,
  "name": "Mojito Browser extension",
  "version": "0.1.0",
  "short_name": "Mojito",
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "96": "logo96.png",
    "128": "logo128.png",
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "logo192.png",
    "default_title": "Mojito",
    "default_popup": "index.html"
  },
  "applications": {
    "gecko": {
      "id": "webextension@mintlayer.org",
      "strict_min_version": "0.1.0"
    }
  }
}
